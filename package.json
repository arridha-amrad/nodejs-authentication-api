    "test": "cross-env NODE_ENV=test jest --clear-cache && jest",
    "test:teardown": "docker-compose -f docker/compose.test.yml down -v",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage"
