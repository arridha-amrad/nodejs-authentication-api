{
  "name": "nodejs-authentication-api",
  "version": "1.0.0",
  "description": "",
  "main": "src/",
  "scripts": {
    "dev": "tsx watch -r tsconfig-paths/register src",
    "build": "tsup src/index.ts --format esm --out-dir dist --dts",
    "start": "node dist/index.js",
    "lint": "npx eslint . --ext .ts",
    "test:typecheck": "tsc --noEmit",
    "compose:dev:up": "docker compose -f docker/compose.dev.yml up -d",
    "compose:dev:down": "docker compose -f docker/compose.dev.yml down",
    "compose:test:up": "docker compose -f docker/compose.test.yml up -d",
    "compose:test:down": "docker compose -f docker/compose.test.yml down",
    "test": "jest --clear-cache && jest",
    "test:teardown": "docker-compose -f docker/compose.test.yml down -v",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "arctic": "^3.6.1",
    "argon2": "0.43.0",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "googleapis": "^148.0.0",
    "jose": "^6.0.11",
    "mongoose": "8.14.3",
    "nanoid": "^5.1.5",
    "nodemailer": "7.0.3",
    "package": "^1.0.1",
    "sanitize-html": "^2.17.0",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@swc/core": "^1.11.24",
    "@swc/jest": "^0.2.38",
    "@types/cookie-parser": "1.4.8",
    "@types/cors": "2.8.18",
    "@types/express": "5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "22.15.18",
    "@types/nodemailer": "6.4.17",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.26.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "type": "module",
  "overrides": {
    "glob": "^9.0.0"
  }
}
